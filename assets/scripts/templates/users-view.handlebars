<table class="table table-striped">
  <thead>
    <tr>
      <th>Edit User</th>
      <th>Delete User</th>
      <th>Email</th>
      <th>Admin Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each users as |user|}}
    <tr>
      <td>{{user.email}}</td>
      <td>{{user.isadmin}}</td>
      <td><button id="{{user.id}}-usredt" class="btn btn-primary edit">Edit</button></td>
      <td><button id="{{user.id}}-usrdel" class="btn btn-danger delete">Delete</button></td>
    </tr>
    {{/each}}
  </tbody>
</table>
