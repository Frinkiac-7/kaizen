<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each items as |item|}}
    <tr>
      <td>{{item.category}}</td>
      <td>{{item.name}}</td>
      <td>{{item.description}}</td>
      <td>{{item.price}}</td>
      {{#if item.editable}}
        <td><button id="{{item.id}}-edt" class="btn btn-primary edit">Edit</button></td>
        <td><button id="{{item.id}}-del" class="btn btn-danger delete">Delete</button></td>
        {{else}}
          <td><p>Unavailable. Record owned by user id #{{item.user_id}}.</p></td>
          <td><p>Unavailable. Record owned by user id #{{item.user_id}}.</p></td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>
